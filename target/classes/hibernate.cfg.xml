<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- Database connection settings -->
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/ovchip</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">Han-Sql1</property>

        <!-- Specify dialect -->
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>

        <!-- Specify hbm2ddl auto setting -->
        <property name="hibernate.hbm2ddl.auto">update</property>

        <!-- Show SQL -->
        <property name="hibernate.show_sql">true</property>

        <!-- Specify the mapping class -->
        <mapping class="nl.hu.dp.ovchip.domein.Reiziger"/>

        <!-- Optional: Caching settings -->
        <!--
        <class-cache class="your.package.YourEntityClass" usage="read-write"/>
        <collection-cache collection="your.package.YourCollection" usage="read-write"/>
        -->

        <!-- Optional: Event listeners -->
        <!--
        <event type="post-insert">your.package.YourPostInsertListener</event>
        -->
    </session-factory>
</hibernate-configuration>
